<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <!-- Main Settings Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="16dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Header Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="40dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_settings"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Settings"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/gray_800" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Configure Device Parameters"
                        android:textSize="14sp"
                        android:textColor="@color/gray_500" />

                </LinearLayout>

                <!-- Value Input Section -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="@color/gray_50"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="32dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="24dp">

<!--                            <ImageView-->
<!--                                android:layout_width="24dp"-->
<!--                                android:layout_height="24dp"-->
<!--                                android:src="@drawable/ic_tune"-->
<!--                                android:layout_marginEnd="8dp" />-->

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Air Quality Value"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/gray_700" />

                        </LinearLayout>

                        <!-- Single Value Input -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24dp"
                            app:boxCornerRadiusBottomEnd="16dp"
                            app:boxCornerRadiusBottomStart="16dp"
                            app:boxCornerRadiusTopEnd="16dp"
                            app:boxCornerRadiusTopStart="16dp"
                            app:boxStrokeColor="@color/blue_500"
                            app:boxStrokeWidth="2dp"
                            app:hintTextColor="@color/blue_500"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/control_value_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter Value"
                                android:textColor="@color/gray_300"
                                android:text=""
                                android:inputType="number"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:padding="16dp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Send Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/send_button"
                            android:layout_width="170dp"
                            android:layout_height="56dp"
                            android:text="Send Value"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/blue_500"
                            app:cornerRadius="28dp"
                            app:elevation="8dp"
                            app:icon="@drawable/ic_send"
                            app:iconSize="20dp"
                            app:iconGravity="textStart"
                            style="@style/Widget.MaterialComponents.Button" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Quick Value Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="32dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quick Values"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_700"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/quick_value_1"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="1000"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/gray_800"
                            app:backgroundTint="@color/gray_300"
                            app:cornerRadius="24dp"
                            app:elevation="4dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/quick_value_2"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="4dp"
                            android:text="2000"
                            android:textColor="@color/gray_800"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/gray_300"
                            app:cornerRadius="24dp"
                            app:elevation="4dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/quick_value_3"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="2500"
                            android:textColor="@color/gray_800"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/gray_300"
                            app:cornerRadius="24dp"
                            app:elevation="4dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Status Indicator -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:background="@drawable/status_background"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:id="@+id/settings_status_dot"
                        android:background="@drawable/status_dot"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/settings_status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ready to Send"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/green_700" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>